<% provide(:title, "Post with id: #{@the_post.id}") %>

<h2>Comments</h2>

<!-- Write a form to create new comment for this post -->

<%= form_for @new_comment_by_user do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_field :body, class: 'form-control' %>
  </div>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>



